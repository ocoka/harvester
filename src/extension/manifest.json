{
  "manifest_version": 2,
  "name": "Bookmarks Harvester",
  "version": "0.0.2",
  "description": "Utility for catalogue, sort, filter, and auto tags all your bookmarks with report",
  "icons": {
    "16": "icons/harvest_16.png",
    "64": "icons/harvest_64.png"
  },
  "browser_action": {
    "default_icon": "icons/harvest_3.png"
  },
  "background": {
    "persistent": false,
    "scripts": ["background.js"]
  },
  "permissions": [
    "bookmarks",
    "<all_urls>",
    "http://*/",
    "https://*/"
  ],
  "content_security_policy": "script-src 'self' http://127.0.0.1 http://localhost:*; object-src 'self'"
}
